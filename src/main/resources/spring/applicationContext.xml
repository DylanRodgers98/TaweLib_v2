<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="hibernateContext.xml" />

    <!-- Service beans -->
    <bean id="bookService" class="com.crowvalley.service.BookService" >
        <property name="DAO" ref="bookDAO" />
    </bean>

    <bean id="laptopService" class="com.crowvalley.service.LaptopService" >
        <property name="DAO" ref="laptopDAO" />
    </bean>

    <bean id="dvdService" class="com.crowvalley.service.DvdService" >
        <property name="DAO" ref="dvdDAO" />
    </bean>

    <!-- DAO beans -->
    <bean id="bookDAO" class="com.crowvalley.dao.BookDAOImpl" />
    <bean id="laptopDAO" class="com.crowvalley.dao.LaptopDAOImpl" />
    <bean id="dvdDAO" class="com.crowvalley.dao.DvdDAOImpl" />

</beans>