<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" closable="false" text="Loans"
     fx:controller="com.crowvalley.tawelib.controller.librarian.LibrarianLoansTabController">
    <content>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <TableView fx:id="tblLoans" prefHeight="298.0" prefWidth="640.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn prefWidth="273.0" resizable="false" text="Copy" />
                        <TableColumn prefWidth="100.0" resizable="false" text="Borrower" />
                        <TableColumn prefWidth="82.0" resizable="false" text="Start Date" />
                        <TableColumn prefWidth="82.0" resizable="false" text="End Date" />
                        <TableColumn prefWidth="82.0" resizable="false" text="Return Date" />
                    </columns>
                    <BorderPane.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </TableView>
            </center>
            <bottom>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" text="Create New Loan" />
                        <Button disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" text="View Loan" />
                        <Button disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" text="Amend Loan" />
                        <Button disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" text="End Loan" />
                    </buttons>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <BorderPane.margin>
                        <Insets right="20.0" />
                    </BorderPane.margin>
                </ButtonBar>
            </bottom>
        </BorderPane>
    </content>
</Tab>
