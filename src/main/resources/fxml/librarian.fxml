<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TabPane prefHeight="403.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="tabResources" closable="false" text="Resources">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <bottom>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <buttons>
                              <Button fx:id="btnNewResource" mnemonicParsing="false" prefHeight="25.0" prefWidth="270.0" text="Create New Resource" />
                              <Button fx:id="btnViewResource" disable="true" mnemonicParsing="false" text="View Resource" />
                              <Button fx:id="btnAmendResource" disable="true" mnemonicParsing="false" text="Amend Resource" />
                              <Button fx:id="btnDeleteResource" disable="true" mnemonicParsing="false" text="Delete Resource" />
                           </buttons>
                           <BorderPane.margin>
                              <Insets right="20.0" />
                           </BorderPane.margin>
                        </ButtonBar>
                     </bottom>
                     <center>
                        <TableView fx:id="tblResources" prefHeight="302.0" prefWidth="416.0" BorderPane.alignment="CENTER">
                           <columns>
                              <TableColumn prefWidth="70.0" resizable="false" text="Type" />
                              <TableColumn prefWidth="479.0" resizable="false" text="Title" />
                              <TableColumn prefWidth="70.0" resizable="false" text="Year" />
                           </columns>
                           <BorderPane.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </BorderPane.margin>
                        </TableView>
                     </center>
                  </BorderPane>
               </content>
          </Tab>
            <Tab fx:id="tabLoans" closable="false" text="Loans">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TableView fx:id="tblLoans" prefHeight="298.0" prefWidth="640.0" BorderPane.alignment="CENTER">
                           <columns>
                              <TableColumn prefWidth="273.0" resizable="false" text="Copy" />
                              <TableColumn prefWidth="100.0" resizable="false" text="Borrower" />
                              <TableColumn prefWidth="82.0" resizable="false" text="Start Date" />
                              <TableColumn prefWidth="82.0" resizable="false" text="End Date" />
                              <TableColumn prefWidth="82.0" resizable="false" text="Return Date" />
                           </columns>
                           <BorderPane.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </BorderPane.margin>
                        </TableView>
                     </center>
                     <bottom>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <buttons>
                            <Button fx:id="btnNewLoan" mnemonicParsing="false" prefHeight="25.0" prefWidth="270.0" text="Create New Loan" />
                              <Button fx:id="btnAmendLoan" disable="true" mnemonicParsing="false" text="Amend Loan" />
                              <Button fx:id="btnEndLoan" disable="true" mnemonicParsing="false" text="End Loan" />
                          </buttons>
                           <BorderPane.margin>
                              <Insets right="20.0" />
                           </BorderPane.margin>
                        </ButtonBar>
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
          <Tab fx:id="tabUsers" closable="false" text="Users">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="tabProfile" closable="false" text="Profile">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="tabSettings" closable="false" text="Settings">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
